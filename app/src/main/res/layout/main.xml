<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.LightTeam.syntaxhighlight.LockableScrollView
    	    android:id="@+id/scroll"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:fillViewport="true">
		
        <com.LightTeam.syntaxhighlight.SyntaxHighlightEditor
		android:scrollbarSize="5.0dip"
		android:scrollbarAlwaysDrawVerticalTrack="true"
		android:scrollbarAlwaysDrawHorizontalTrack="true"
		android:textCursorDrawable="@null"
		android:textSize="14.0sp"
		android:textColor="@android:color/black"
		android:gravity="center|left|top"
		android:background="@android:color/transparent"
		android:scrollbars="horizontal|vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:minWidth="10000.0dp"
		android:hint="y0y0y0 Text Editor"
		android:id="@+id/EditTextSYN"
		android:inputType="textMultiLine"
		android:ems="10" />
		
    </com.LightTeam.syntaxhighlight.LockableScrollView>

</LinearLayout>
